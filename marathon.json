{
  "id": "/jenkins",
  "cmd": null,
  "cpus": 1,
  "mem": 2048,
  "disk": 0,
  "instances": 1,
  "acceptedResourceRoles": [
    "slave_public"
  ],
  "networks":[
    { "mode":"container/bridge" }
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "forcePullImage": false,
      "image": "mesosphere/jenkins:testing",
      "parameters": [],
      "privileged": false
    },
    "portMappings": [
      { "containerPort": 8080, "hostPort": 0, "protocol": "tcp" }
    ]
  },
  "env": {
    "JENKINS_OPTS": "",
    "JENKINS_SLAVE_AGENT_PORT": "50000",
    "JENKINS_AGENT_ROLE": "*"
  },
  "labels": {
    "MARATHON_SINGLE_INSTANCE_APP": "true"
  },
  "upgradeStrategy": {
    "maximumOverCapacity": 0,
    "minimumHealthCapacity": 0
  }
}
